<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    tools:context=".fragment.bottomsheet.MealBottomSheetFragment">
    <ImageView
        android:id="@+id/img_bottom_sheet"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:id="@+id/line_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/img_bottom_sheet"
        app:layout_constraintTop_toTopOf="@+id/img_bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_5sdp">
        <TextView
            android:id="@+id/tv_bottom_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/baseline_location_on_24"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_bottom_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/baseline_category_24"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bottom_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Meal name"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toEndOf="@+id/img_bottom_sheet"
        app:layout_constraintTop_toBottomOf="@+id/line_bottom_sheet"
        android:layout_margin="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/tv_read_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Read more ..."
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toEndOf="@+id/img_bottom_sheet"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_meal_name"
        android:layout_margin="@dimen/_10sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>